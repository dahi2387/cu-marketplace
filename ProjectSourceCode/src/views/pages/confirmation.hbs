<body id="confpage">
    <div class="container py-4">
        {{!-- Success Message Card --}}
        <div class="card mb-4">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                </div>
                <h2 class="card-title mb-4">Transaction Successful!</h2>
                <p class="text-muted">Your ticket purchase has been confirmed.</p>
                <p class="text-muted">To receive your ticket please contact the seller at: <strong>jebe4523@colorado.edu</strong></p>
            </div>
        </div>

        {{!-- Transaction Details Card --}}
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="h5 mb-0">Transaction Details</h3>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h4 class="h6 text-muted mb-3">Event Information</h4>
                        <p class="mb-1"><strong>{{event.homeTeam}} vs {{event.awayTeam}}</strong></p>
                        <p class="mb-1">{{event.date}} at {{event.time}}</p>
                        <p class="mb-1">{{event.location}}</p>
                    </div>
                    <div class="col-md-6">
                        <h4 class="h6 text-muted mb-3">Purchase Information</h4>
                        <p class="mb-1"><strong>Order ID:</strong> {{transaction.orderId}}</p>
                        <p class="mb-1"><strong>Purchase Date:</strong> {{transaction.date}}</p>
                        <p class="mb-1"><strong>Payment Method:</strong> {{transaction.paymentMethod}}</p>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>Item</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-end">Price</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Student Ticket</td>
                                <td class="text-center">{{transaction.quantity}}</td>
                                <td class="text-end">${{transaction.pricePerTicket}}</td>
                                <td class="text-end">${{transaction.subtotal}}</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                                <td class="text-end">${{transaction.subtotal}}</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Service Fee:</strong></td>
                                <td class="text-end">${{transaction.serviceFee}}</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <td class="text-end"><strong>${{transaction.total}}</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        {{!-- Action Buttons --}}
        <div class="d-flex justify-content-center gap-3" style="text-align: center; margin-top:10px;">
            <a href="/events" class="button" class="btn btn-primary">Browse More Events</a>
            <a href="/account" class="button" class="btn btn-outline-primary">View My Tickets</a>
        </div>
    </div>
</body>